# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET			/v1/integration/:orgId		@controllers.IntegrationController.listIntegrations(:orgId)

POST		/v1/integration/:orgId		@controllers.IntegrationController.listIntegrations(:orgId)

# Home page
GET        /                          controllers.Application.index()

GET        /admin/metrics             com.kenshoo.play.metrics.MetricsController.metrics

GET        /status                    controllers.common.Application.status()

->         /                          common.Routes

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file              controllers.Assets.at(path="/public", file)
